<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details"
        label="COM_FIXASSETS_FIELDSET_DETAILS">

        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            class="readonly"
            size="10"
            default="0"
            readonly="true"
        />

        <field
            name="title"
            type="text"
            label="COM_FIXASSETS_FIELD_TITLE_LABEL"
            description="COM_FIXASSETS_FIELD_TITLE_DESC"
            class="input-xxlarge input-large-text"
            size="40"
            required="true"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="form-select-color-state"
            size="1"
            default="1"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="created"
            type="calendar"
            label="COM_FIXASSETS_FIELD_CREATED_LABEL"
            description="COM_FIXASSETS_FIELD_CREATED_DESC"
            size="22"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />

        <field
            name="modified"
            type="calendar"
            label="COM_FIXASSETS_FIELD_MODIFIED_LABEL"
            description="COM_FIXASSETS_FIELD_MODIFIED_DESC"
            size="22"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />
    </fieldset>
</form>