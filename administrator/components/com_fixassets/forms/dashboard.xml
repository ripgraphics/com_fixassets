            name="total_items"
            type="number"
            label="COM_FIXASSETS_DASHBOARD_TOTAL_ITEMS"
            class="readonly"
            readonly="true"
            default="0"
        />

        <field
            name="published_items"
            type="number"
            label="COM_FIXASSETS_DASHBOARD_PUBLISHED_ITEMS"
